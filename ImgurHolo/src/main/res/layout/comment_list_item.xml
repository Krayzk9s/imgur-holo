<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="2dp"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/comment_item"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="2dp"
            >

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_1"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:layout_width="5dp"
              android:background="@color/Blue"
              android:layout_height="fill_parent"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_2"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:background="@color/Red"
              android:layout_width="5dp"
              android:layout_height="fill_parent"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_3"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:background="@color/Yellow"
              android:layout_width="5dp"
              android:layout_height="fill_parent"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_4"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:background="@color/Purple"
              android:layout_width="5dp"
              android:layout_height="fill_parent"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_5"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:background="@color/Orange"
              android:layout_width="5dp"
              android:layout_height="fill_parent"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/margin_6"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp"
              android:background="@color/Green"
              android:layout_width="5dp"
              android:layout_height="fill_parent"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/header"
                          android:text="@string/menu_gallery"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="5dip"
                          android:textAppearance="?android:textAppearanceSmall"
                          android:textColor="@color/DarkGray"
                        />

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/body"
                          android:text="@string/menu_gallery"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:minHeight="50dp"
                          android:layout_marginRight="5dip"
                          android:textAppearance="?android:textAppearanceSmall"
                          android:autoLink="web"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="50dp"
                  android:id="@+id/comment_buttons"
            >

        <ImageButton
                android:id="@+id/rating_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_good"/>

        <ImageButton
                android:id="@+id/rating_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_bad"/>

        <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/content_discard"
                android:visibility="gone"/>

        <ImageButton
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/social_reply"/>

        <ImageButton
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alerts_and_states_warning"/>
    </LinearLayout>
</LinearLayout>